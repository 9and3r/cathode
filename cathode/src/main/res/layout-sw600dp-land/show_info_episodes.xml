<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episodes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/showContentPadding"
    android:paddingRight="@dimen/showContentPadding"
    android:visibility="gone"
    tools:visibility="visible">

  <View
      android:id="@+id/watchDivider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="12dp"
      android:paddingLeft="@dimen/showContentPadding"
      android:paddingRight="@dimen/showContentPadding"
      android:visibility="gone"
      tools:visibility="visible"
      android:background="#FFC3C3C3"/>

  <LinearLayout
      android:id="@+id/episodesTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/watchTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/to_watch"
        style="@style/Widget.InfoTitle"/>

    <TextView
        android:id="@+id/collectTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/to_collect"
        style="@style/Widget.InfoTitle"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:baselineAligned="false"
      android:orientation="horizontal"
      android:weightSum="4">

    <include
        android:id="@+id/toWatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        layout="@layout/show_info_episode"/>

    <include
        android:id="@+id/lastWatched"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        layout="@layout/show_info_episode"/>

    <include
        android:id="@+id/toCollect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        layout="@layout/show_info_episode"/>

    <include
        android:id="@+id/lastCollected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        tools:visibility="visible"
        layout="@layout/show_info_episode"/>
  </LinearLayout>
</LinearLayout>
