<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <net.simonvt.cathode.widget.ObservableScrollView
      android:id="@id/contentContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <net.simonvt.cathode.widget.RemoteImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dominantMeasurement="width"
            app:aspectRatio="0.5625"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

          <TextView
              android:id="@+id/year"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:textColor="?android:attr/textColorPrimaryInverse"
              android:text="2010"/>
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/header_bg_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <LinearLayout
              android:id="@+id/ratingContainer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:layout_marginTop="4dp"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                style="@style/Widget.RatingBarIndicator"/>

            <TextView
                android:id="@+id/allRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="95%"/>
          </LinearLayout>

          <TextView
              android:id="@+id/overviewTitle"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Overview"
              style="@style/Widget.InfoTitle"/>

          <TextView
              android:id="@+id/overview"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:text="From the delightfully twisted creative minds behind Family Guy comes American Dad, the animated tour de force featuring CIA operative Stan Smith, his outrageous family, and Roger, the alcoholic extra-terrestrial who lives with them! Whether it's rigging elections, erasing memories, chasing sleazy strip clubs, or staging bum fights, it's all in a day's work for Stan."
              style="@style/Widget.InfoText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:gravity="right">

          <TextView
              android:id="@+id/isWatched"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginRight="8dp"
              android:drawableRight="@drawable/ic_checkmark_watched"
              android:text="@string/checkmark_watched"
              android:textColor="@color/watchedColor"
              style="@style/Widget.CheckMark"/>

          <TextView
              android:id="@+id/inCollection"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginRight="8dp"
              android:drawableRight="@drawable/ic_checkmark_collection"
              android:text="@string/checkmark_collection"
              android:textColor="@color/collectedColor"
              style="@style/Widget.CheckMark"/>

          <TextView
              android:id="@+id/inWatchlist"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginRight="8dp"
              android:drawableRight="@drawable/ic_checkmark_watchlist"
              android:text="@string/checkmark_watchlist"
              android:textColor="@color/watchlistColor"
              style="@style/Widget.CheckMark"/>
        </LinearLayout>
      </FrameLayout>

      <LinearLayout
          android:id="@+id/actorsParent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:id="@+id/actorsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Actors"
            style="@style/Widget.InfoTitle"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <LinearLayout
              android:id="@+id/actors"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:layout_marginBottom="6dp">

            <include layout="@layout/person"/>
          </LinearLayout>
        </HorizontalScrollView>
      </LinearLayout>
    </LinearLayout>
  </net.simonvt.cathode.widget.ObservableScrollView>

  <include layout="@layout/fragment_list_progressbar"/>
</FrameLayout>
