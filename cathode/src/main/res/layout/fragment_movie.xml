<net.simonvt.cathode.widget.ObservableNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

  <net.simonvt.cathode.widget.AppBarRelativeLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="@bool/drawsBehindStatusBar"
      app:expandedTitleMarginStart="@dimen/appBarTitleMarginStart"
      app:expandedTitleMarginEnd="@dimen/appBarTitleMarginEnd">

    <include layout="@layout/appbar_backdrop"/>

    <RelativeLayout
        android:id="@id/appBarContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backdrop"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:background="@color/contentBackground">

      <include
          layout="@layout/fragment_movie_top"
          android:id="@+id/topBarContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/topBarContainer">

        <include
            layout="@layout/fragment_list_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"/>

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <include layout="@layout/fragment_movie_content"/>

            <include layout="@layout/checkmarks"/>
          </FrameLayout>
        </LinearLayout>
      </FrameLayout>
    </RelativeLayout>

    <include layout="@layout/appbar_toolbar"/>
  </net.simonvt.cathode.widget.AppBarRelativeLayout>
</net.simonvt.cathode.widget.ObservableNestedScrollView>
