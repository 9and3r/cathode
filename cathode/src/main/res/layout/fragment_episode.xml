<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

  <net.simonvt.cathode.widget.ObservableScrollView
      android:id="@id/contentContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <net.simonvt.cathode.widget.RemoteImageView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dominantMeasurement="width"
            app:aspectRatio="0.5625"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

          <net.simonvt.cathode.widget.TimeStamp
              android:id="@+id/firstAired"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:textColor="?android:attr/textColorPrimaryInverse"
              tools:text="2010"/>
        </LinearLayout>
      </FrameLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/header_bg_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <include
              layout="@layout/info_rating"
              android:layout_marginLeft="6dp"
              android:layout_marginTop="4dp"/>

          <TextView
              android:id="@+id/title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="8dp"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:fontFamily="sans-light"
              tools:text="This is a show name"/>

          <TextView
              android:id="@+id/overview"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="8dp"
              tools:text="Text goes here"
              style="@style/Widget.InfoText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:gravity="right">

          <TextView
              android:id="@+id/isWatched"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginRight="8dp"
              android:drawableRight="@drawable/ic_checkmark_watched"
              android:text="@string/checkmark_watched"
              android:textColor="@color/watchedColor"
              style="@style/Widget.CheckMark"/>

          <TextView
              android:id="@+id/inCollection"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginRight="8dp"
              android:drawableRight="@drawable/ic_checkmark_collection"
              android:text="@string/checkmark_collection"
              android:textColor="@color/collectedColor"
              style="@style/Widget.CheckMark"/>

          <TextView
              android:id="@+id/inWatchlist"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginRight="8dp"
              android:drawableRight="@drawable/ic_checkmark_watchlist"
              android:text="@string/checkmark_watchlist"
              android:textColor="@color/watchlistColor"
              style="@style/Widget.CheckMark"/>
        </LinearLayout>
      </FrameLayout>
    </LinearLayout>
  </net.simonvt.cathode.widget.ObservableScrollView>

  <include layout="@layout/fragment_list_progressbar"/>
</FrameLayout>
