<resources>

  <style name="Widget" parent="android:Widget.Holo"/>

  <style name="Toolbar">
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="Crouton">
    <item name="android:gravity">center</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverseNoDisable</item>
  </style>

  <style name="Widget.InfoTitle">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <!--item name="android:textStyle">italic</item>
    <item name="android:fontFamily">sans-serif-light</item-->
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textColor">@color/titleTextColor</item>
  </style>

  <style name="Widget.InfoText">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:fontFamily">sans-light</item>
    <item name="android:textColor">#FF777777</item>
    <item name="android:lineSpacingExtra">2dp</item>
  </style>

  <style name="Widget.Person">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="Widget.Job">
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:fontFamily">sans-light</item>
    <item name="android:textColor">#FF777777</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="Widget.CheckMark">
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textSize">10sp</item>
    <item name="android:drawablePadding">4dp</item>
  </style>

  <style name="Widget.RatingBarIndicator">
    <item name="android:background">@null</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:button">@null</item>
    <item name="android:maxHeight">24dp</item>
    <item name="android:progressDrawable">@drawable/ratingbar</item>
    <item name="android:minHeight">24dp</item>
    <item name="android:thumb">@null</item>
    <item name="android:numStars">10</item>
    <item name="android:stepSize">1.0</item>
    <item name="android:isIndicator">true</item>
  </style>

  <style name="Widget.RatingBar" parent="@android:style/Widget.Material.Light.RatingBar">
    <item name="android:isIndicator">false</item>
    <item name="android:numStars">10</item>
    <item name="android:stepSize">1.0</item>
  </style>

  <style name="Widget.CircularProgressIndicator">
    <item name="textMargin">20dp</item>
    <item name="textColor">?android:attr/textColorPrimary</item>
    <item name="textSize">12sp</item>
    <item name="circleStrokeWidth">2dp</item>
    <item name="circleColor">@color/circleProgressColor</item>
    <item name="circleBackgroundColor">@color/circleProgressBackgroundColor</item>
  </style>

  <style name="AboutText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:gravity">center</item>
  </style>

  <style name="AboutText.Header">
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">16dp</item>
  </style>

  <style name="AboutText.Clickable">
    <item name="android:textColor">@android:color/holo_blue_dark</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="Widget.UpcomingHeader">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <!--item name="android:textStyle">italic</item-->
    <!--item name="android:fontFamily">sans-serif-light</item-->
    <item name="android:layout_marginBottom">4dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textColor">@color/titleTextColor</item>
  </style>

  <style name="Card"/>

  <style name="Card.Title">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:textColor">@color/titleTextColor</item>
  </style>

  <style name="Person"/>

  <style name="Person.Name">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Person.Job">
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>

  <style name="AppBarRelativeLayout">
    <item name="expandedTitleMargin">32dp</item>
    <item name="expandedTitleTextAppearance">@style/ExpandedTitleTextAppearance</item>
    <item name="collapsedTitleTextAppearance">@style/CollapsedTitleTextAppearance</item>
    <item name="contentScrim">?attr/colorPrimary</item>
    <item name="statusBarScrim">?attr/colorPrimaryDark</item>
  </style>

  <style name="ExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Display1">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="TopBarDivider">
    <item name="android:layout_gravity">top</item>
  </style>

  <style name="TopBarContent">
    <item name="android:layout_marginTop">2dp</item>
  </style>

</resources>
