<resources>

  <declare-styleable name="RemoteImageView">
    <attr name="dominantMeasurement" format="enum">
      <enum name="height" value="0"/>
      <enum name="width" value="1"/>
    </attr>

    <attr name="aspectRatio" format="float"/>

    <attr name="placeholder" format="reference"/>
  </declare-styleable>

  <declare-styleable name="MaxSizeLinearLayout">
    <attr name="maxWidth" format="dimension"/>
    <attr name="maxHeight" format="dimension"/>
  </declare-styleable>

  <attr name="circularProgressIndicatorStyle" format="reference"/>

  <declare-styleable name="CircularProgressIndicator">
    <attr name="textMargin" format="dimension"/>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="textBackgroundColor" format="color"/>
    <attr name="circleStrokeWidth" format="dimension"/>
    <attr name="maxValue" format="float"/>
    <attr name="circleColor" format="color"/>
    <attr name="circleBackgroundColor" format="color"/>
  </declare-styleable>

</resources>
