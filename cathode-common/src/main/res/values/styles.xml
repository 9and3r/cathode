<resources>

  <style name="AppBarRelativeLayout">
    <item name="expandedTitleMargin">32dp</item>
    <item name="expandedTitleTextAppearance">@style/ExpandedTitleTextAppearance</item>
    <item name="collapsedTitleTextAppearance">@style/CollapsedTitleTextAppearance</item>
    <item name="contentScrim">?attr/colorPrimary</item>
    <item name="statusBarScrim">?attr/colorPrimaryDark</item>
  </style>

  <style name="ExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Display1">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CircularProgressIndicator">
    <item name="textMargin">20dp</item>
    <item name="textColor">?android:attr/textColorPrimary</item>
    <item name="textSize">12sp</item>
    <item name="circleStrokeWidth">2dp</item>
    <item name="circleColor">@color/circleProgressColor</item>
    <item name="circleBackgroundColor">@color/circleProgressBackgroundColor</item>
  </style>

  <style name="Toolbar">
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="Category">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:layout_marginBottom">4dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textColor">?attr/colorPrimary</item>
  </style>
</resources>
