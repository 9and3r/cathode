<resources>

  <declare-styleable name="AspectRatioView">
    <attr name="dominantMeasurement" format="enum">
      <enum name="height" value="0"/>
      <enum name="width" value="1"/>
    </attr>

    <attr name="aspectRatio" format="float"/>
  </declare-styleable>

  <declare-styleable name="MaxSizeLinearLayout">
    <attr name="maxWidth" format="dimension"/>
    <attr name="maxHeight" format="dimension"/>
  </declare-styleable>

  <attr name="circularProgressIndicatorStyle" format="reference"/>

  <declare-styleable name="CircularProgressIndicator">
    <attr name="textMargin" format="dimension"/>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="textBackgroundColor" format="color"/>
    <attr name="circleStrokeWidth" format="dimension"/>
    <attr name="maxValue" format="float"/>
    <attr name="circleColor" format="color"/>
    <attr name="circleBackgroundColor" format="color"/>
  </declare-styleable>

  <declare-styleable name="InsetsFrameLayout">
    <attr name="insetsColor" format="color"/>
  </declare-styleable>

  <declare-styleable name="AppBarRelativeLayout">
    <attr name="expandedTitleMargin"/>
    <attr name="expandedTitleMarginStart"/>
    <attr name="expandedTitleMarginEnd"/>
    <attr name="expandedTitleMarginTop"/>
    <attr name="expandedTitleMarginBottom"/>

    <attr name="contentScrim"/>
    <attr name="statusBarScrim"/>

    <attr name="expandedTitleTextAppearance"/>
    <attr name="collapsedTitleTextAppearance"/>

    <attr name="contentTopViewId" format="reference"/>
  </declare-styleable>

  <declare-styleable name="AppBar_LayoutParams">
    <attr name="layout_scrollMode">
      <enum name="none" value="0"/>
      <enum name="pin" value="1"/>
      <enum name="parallex" value="2"/>
    </attr>

    <attr name="layout_parallexMultiplier" format="float"/>
  </declare-styleable>

  <attr name="remoteImageViewStyle" format="reference"/>
  <declare-styleable name="RemoteImageView">
    <attr name="placeholder" format="reference"/>
  </declare-styleable>
</resources>
