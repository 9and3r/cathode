<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        android:orientation="vertical">

        <net.simonvt.trakt.widget.RemoteImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dominantMeasurement="width"
            app:placeholder="@drawable/placeholder_default"
            app:aspectRatio="0.1846" />

        <LinearLayout
            android:id="@+id/airtimeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@android:drawable/screen_background_dark_transparent">

            <TextView
                android:id="@+id/airtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sunday 10:00pm, AMC"
                android:textColor="?android:attr/textColorPrimaryInverse" />

            <TextView
                android:id="@+id/certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TV-MA"
                android:textColor="?android:attr/textColorPrimaryInverse" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ratingContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        style="@style/Widget.RatingBarIndicator" />

                    <TextView
                        android:id="@+id/allRatings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="95%" />
                </LinearLayout>

                <TextView
                    android:id="@+id/overviewTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    style="@style/Widget.InfoTitle" />

                <TextView
                    android:id="@+id/overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="From the delightfully twisted creative minds behind Family Guy comes American Dad, the animated tour de force featuring CIA operative Stan Smith, his outrageous family, and Roger, the alcoholic extra-terrestrial who lives with them! Whether it's rigging elections, erasing memories, chasing sleazy strip clubs, or staging bum fights, it's all in a day's work for Stan."
                    style="@style/Widget.InfoText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#FFC3C3C3" />

                <TextView
                    android:id="@+id/genresTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Genres"
                    style="@style/Widget.InfoTitle" />

                <TextView
                    android:id="@+id/genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Animation, Comedy"
                    style="@style/Widget.InfoText" />

                <View
                    android:id="@+id/nextEpisodeDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#FFC3C3C3" />

                <TextView
                    android:id="@+id/nextEpisode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Next episode"
                    style="@style/Widget.InfoTitle" />

                <net.simonvt.trakt.widget.ForegroundDrawableRelativeLayout
                    android:id="@+id/nextEpisodeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_bg"
                    android:foreground="?android:attr/selectableItemBackground">

                    <net.simonvt.trakt.widget.RemoteImageView
                        android:id="@+id/nextEpisodeBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/header_bg"
                        app:dominantMeasurement="width"
                        app:placeholder="@drawable/placeholder_default"
                        app:aspectRatio="0.5625" />

                    <TextView
                        android:id="@+id/nextEpisodeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@id/nextEpisodeBanner"
                        android:fontFamily="sans-serif-light"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"
                        android:text="Some Random Episode" />

                    <TextView
                        android:id="@+id/nextEpisodeAirTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@id/nextEpisodeTitle"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:text="OCT 20, 2010 (MON)" />

                    <TextView
                        android:id="@+id/nextEpisodeEpisode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/nextEpisodeTitle"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorHint"
                        android:text="S10E20" />

                    <net.simonvt.trakt.widget.OverflowView
                        android:id="@+id/nextEpisodeOverflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
                </net.simonvt.trakt.widget.ForegroundDrawableRelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/inCollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@drawable/ic_checkmark_collection"
                    android:text="@string/checkmark_collection"
                    android:textColor="@android:color/holo_orange_dark"
                    style="@style/Widget.CheckMark" />

                <TextView
                    android:id="@+id/inWatchlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@drawable/ic_checkmark_watchlist"
                    android:text="@string/checkmark_watchlist"
                    android:textColor="@android:color/holo_red_dark"
                    style="@style/Widget.CheckMark" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
